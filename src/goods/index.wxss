@import "../assets/base.wxss";
.wv-goods{
    width: 50%;
}
.wv-goods_title{
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    /*! autoprefixer: off */
    -webkit-box-orient: vertical;
}
.wv-goods_remarks{}
.wv-goods_price{}
.wv-goods>image{
    width: 100%;
    height: 150px;
    background: #000;
}
/* 行样式 */
.wv-goods-row{
    width: 100%;
    height: 200px;
    display: flex;
}
.wv-goods-row>image{
    width: 140px;
    height: 200px;
}
.wv-goods-row .wv-goods-data{
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
