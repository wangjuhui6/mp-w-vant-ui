<scroll-view
  scroll-y="{{ scrollY }}"
  upper-threshold="{{ upperThreshold }}"
  lower-threshold="{{ lowerThreshold }}"
  bindscrolltoupper="onRefresh"
  bindscrolltolower="onLoad"
  class="w h"
>
    <view wx:if="{{ refreshing }}">
        <view class="refreshing">{{ refreshingText }}</view>
    </view>
    <slot />
    <view wx:if="{{ loading }}">
        <view class="loading">{{ loadingText }}</view>
    </view>

    <view wx:if="{{ finished }}">
        <view class="finished">{{ finishedText }}</view>
    </view>
</scroll-view>
